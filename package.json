{
  "name": "argo-cd-action",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action for executing Argo CD",
  "keywords": [
    "github",
    "actions",
    "argo-cd",
    "git-ops"
  ],
  "homepage": "https://github.com/step-security/argo-cd-action#readme",
  "bugs": {
    "url": "https://github.com/step-security/argo-cd-action/issues"
  },
